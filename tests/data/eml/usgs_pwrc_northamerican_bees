        <meta name="publisher" content="USGS - U.S. Geological Survey">
        <title>Biodiversity Information Serving Our Nation (BISON) Integrated Publishing Toolkit (IPT)</title>

        <script type="text/javascript">
		window.onload=function() {
		function countdown() {
		if ( typeof countdown.counter == 'undefined' ) {
			countdown.counter = 10; // initial count
			}
		if(countdown.counter > 0) {
			document.getElementById('count').innerHTML = countdown.counter--;
			setTimeout(countdown, 1000);
			}
		else {
			location.href = 'https://bison.usgs.gov/ipt';
			}
		}
		countdown();
		};
		</script>
    </head>

    <body>
        <noscript>
